{
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  },
  "scripts": {
    "dev": "cross-env DEBUG=server nodemon --exec babel-node ./src/index.js",
    "start": "cross-env DEBUG=server node dist/src/index.js",
    "test": "cross-env NODE_ENV=test mocha \"src/**/*.spec.js\"",
    "build:server": "cross-env DEBUG=server babel . --out-dir dist --ignore \"node_modules\"",
    "build": "npm run clean && npm run build:server",
    "clean": "rm -rf dist && mkdir dist",
    "build:db": "cross-env DEBUG=server babel-node ./src/database/build.script.js",
    "lint": "eslint src/ --fix"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "**/*": "prettier -w -u"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.4",
    "cross-env": "^7.0.3",
    "debug": "^4.3.1",
    "dotenv": "^10.0.0",
    "express": "^4.16.1",
    "helmet": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.4",
    "morgan": "^1.9.1",
    "pg": "^8.0.3",
    "serve-favicon": "^2.5.0",
    "socket.io": "^4.1.2",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "babel-loader": "8.2.2",
    "chai": "^4.2.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-prettier": "^3.4.0",
    "lint-staged": "^11.0.0",
    "mocha": "^9.0.1",
    "nodemon": "^2.0.8",
    "prettier": "2.3.2",
    "socket.io-client": "^4.1.2",
    "supertest": "^6.1.3"
  }
}
